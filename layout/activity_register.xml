<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/Wallpaper"

    >


    <TextView
        android:id="@+id/LogIn"
        android:layout_width="381dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="683dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="ثبت نام"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Close_tab"
        android:layout_width="61dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="683dp"
        android:background="@android:drawable/presence_offline"
        android:drawableBottom="@android:drawable/presence_offline"
        app:backgroundTint="@color/white"
        app:iconTint="@color/black" />


    <TextView
        android:id="@+id/textView_header"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="601dp"
        android:background="@android:drawable/divider_horizontal_dark"
        android:gravity="center"
        android:text="با وارد کردن نام و کلمه عبور، حساب کاربری و پیشرفت بازی خودرا ذخیره کنید. در غیر اینصورت هیچ مسئولیتی در قبال بازگشت اطلاعات شما وجود ندارد."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView_body"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="359dp"
        android:background="@android:drawable/divider_horizontal_dark"
        android:gravity="center"
        android:text="*بازیابی رمز عبور در صورت فراموشی فقط از طریق ایمیل امکان پذیر است."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/entry_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="158dp"
        android:layout_marginRight="158dp"
        android:layout_marginBottom="23dp"
        android:text="ثبت اطلاعات"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#FFC107" />

    <EditText
        android:id="@+id/username2"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="205dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="165dp"
        android:layout_marginBottom="540dp"
        android:background="@drawable/gold"
        android:gravity="center"
        android:hint="نام کاربری خود را وارد کنید"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password2"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="203dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="165dp"
        android:layout_marginBottom="493dp"
        android:background="@drawable/gold"
        android:gravity="center"
        android:hint="رمز عبور دلخواه خود را وارد کنید"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="203dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="167dp"
        android:layout_marginBottom="446dp"
        android:background="@drawable/gold"
        android:gravity="center"
        android:hint="تکرار رمز عبور"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="205dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="165dp"
        android:layout_marginRight="163dp"
        android:layout_marginBottom="315dp"
        android:background="@drawable/gold"
        android:gravity="center"
        android:hint="ایمیل خود را وارد کنید ( اختیاری )"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="115dp"
        android:layout_height="112dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="241dp"
        android:layout_marginRight="241dp"
        android:layout_marginBottom="162dp"
        android:background="@android:drawable/divider_horizontal_dim_dark"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="220dp"
        android:text="تغییر تصویر پروفایل"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="@android:drawable/divider_horizontal_dark"
        android:textColor="@color/white"/>


</RelativeLayout>