<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/Wallpaper"

    >


    <TextView
        android:id="@+id/LogIn"
        android:layout_width="381dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="683dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="تنظیمات"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Close_tab"
        android:layout_width="61dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="683dp"
        android:background="@android:drawable/presence_offline"
        android:drawableBottom="@android:drawable/presence_offline"
        app:backgroundTint="@color/white"
        app:iconTint="@color/black" />

    <EditText
        android:id="@+id/username2"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="205dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="169dp"
        android:layout_marginRight="169dp"
        android:layout_marginBottom="623dp"
        android:background="@drawable/gold"
        android:hint="تغییر نام کاربری"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/password2"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="203dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="169dp"
        android:layout_marginRight="169dp"
        android:layout_marginBottom="578dp"
        android:background="@drawable/gold"
        android:hint="تغییر رمز عبور"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="115dp"
        android:layout_height="112dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="241dp"
        android:layout_marginRight="241dp"
        android:layout_marginBottom="162dp"
        android:background="@android:drawable/divider_horizontal_dim_dark"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="220dp"
        android:text="تغییر تصویر پروفایل"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="@android:drawable/divider_horizontal_dark"
        android:textColor="@color/white"/>

</RelativeLayout>